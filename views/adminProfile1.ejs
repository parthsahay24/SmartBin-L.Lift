<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
  <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <div class="w-full flex justify-end">
      <a class="bg-red-500 rounded-md px-3 py-2 inline-block" href="/logout">Logout</a>
    </div>
    <div class="flex items-start gap-3">
      <div class="w-10 h-10 rounded-md overflow-hidden">
        <img class="w-full h-full object-cover" src="/images/profilePhoto/<%= admin.profilePic %>" alt="" />
      </div>
      <h3 class="text-3xl mb-4">
        <span class="font-light">Hello admin,</span> <%= admin.username %>
      </h3>
    </div>

    <div class="mt-8">
      <h2 class="text-2xl font-bold mb-4">Admin Requests</h2>
      <!-- Tab Buttons -->
      <div class="mb-4">
        <button id="recycleTab" onclick="showRecycle()" class="px-4 py-2 bg-blue-600 rounded-t-md focus:outline-none">Recycle Requests</button>
        <button id="garbageTab" onclick="showGarbage()" class="px-4 py-2 bg-gray-600 rounded-t-md focus:outline-none">Garbage Requests</button>
      </div>

      <!-- Recycle Requests Section -->
      <div id="recycleSection" class="bg-zinc-800 rounded-md shadow-md p-4">
        <table class="w-full">
          <thead>
            <tr class="bg-zinc-700 text-gray-400">
              <th class="px-4 py-3 text-left">Serial No.</th>
              <th class="px-4 py-3 text-left">Username</th>
              <th class="px-4 py-3 text-left">Description</th>
              <th class="px-4 py-3 text-left">Location</th>
              <th class="px-4 py-3 text-left">Status</th>
              <th class="px-4 py-3 text-left">Action</th>
            </tr>
          </thead>
          <tbody id="recycleTableBody"></tbody>
        </table>
      </div>

      <!-- Garbage Requests Section -->
      <div id="garbageSection" class="bg-zinc-800 rounded-md shadow-md p-4 hidden">
        <table class="w-full">
          <thead>
            <tr class="bg-zinc-700 text-gray-400">
              <th class="px-4 py-3 text-left">Serial No.</th>
              <th class="px-4 py-3 text-left">Username</th>
              <th class="px-4 py-3 text-left">Description</th>
              <th class="px-4 py-3 text-left">Location</th>
              <th class="px-4 py-3 text-left">Status</th>
              <th class="px-4 py-3 text-left">Action</th>
            </tr>
          </thead>
          <tbody id="garbageTableBody"></tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Tab switching functions
    function showRecycle() {
      document.getElementById('recycleSection').classList.remove('hidden');
      document.getElementById('garbageSection').classList.add('hidden');
      document.getElementById('recycleTab').classList.replace('bg-gray-600', 'bg-blue-600');
      document.getElementById('garbageTab').classList.replace('bg-blue-600', 'bg-gray-600');
    }
    function showGarbage() {
      document.getElementById('garbageSection').classList.remove('hidden');
      document.getElementById('recycleSection').classList.add('hidden');
      document.getElementById('garbageTab').classList.replace('bg-gray-600', 'bg-blue-600');
      document.getElementById('recycleTab').classList.replace('bg-blue-600', 'bg-gray-600');
    }

    // Load Recycling Requests
    function loadRecycleRequests() {
      axios.get('/admin/recycling-requests')
        .then(function (response) {
          const requests = response.data;
          const tableBody = document.getElementById('recycleTableBody');
          tableBody.innerHTML = '';
          let sln = 1;
          requests.forEach(function(request) {
            const row = `
              <tr class="border-b border-zinc-700">
                <td class="px-4 py-3">${sln}</td>
                <td class="px-4 py-3">${request.user.username}</td>
                <td class="px-4 py-3">${request.description}</td>
                <td class="px-4 py-3">${request.location}</td>
                <td class="px-4 py-3">${request.status || 'pending'}</td>
                <td class="px-4 py-3">
                  ${request.status === 'pending' ? 
                    `<button onclick="updateRecycleStatus('${request._id}')" class="bg-green-500 text-white px-2 py-1 rounded">
                        Mark Completed
                    </button>` : 
                    '<span class="text-green-400">Completed</span>'
                  }
                </td>
              </tr>
            `;
            tableBody.innerHTML += row;
            sln++;
          });
        })
        .catch(function (error) {
          console.error('Error loading recycle requests:', error);
        });
    }

    // Load Garbage Requests
    function loadGarbageRequests() {
      axios.get('/admin/garbage-requests')
        .then(function (response) {
          const requests = response.data;
          const tableBody = document.getElementById('garbageTableBody');
          tableBody.innerHTML = '';
          let sln = 1;
          requests.forEach(function(request) {
            const row = `
              <tr class="border-b border-zinc-700">
                <td class="px-4 py-3">${sln}</td>
                <td class="px-4 py-3">${request.user.username}</td>
                <td class="px-4 py-3">${request.description}</td>
                <td class="px-4 py-3">${request.location}</td>
                <td class="px-4 py-3">${request.status || 'pending'}</td>
                <td class="px-4 py-3">
                  ${request.status === 'pending' ? 
                    `<button onclick="updateGarbageStatus('${request._id}')" class="bg-green-500 text-white px-2 py-1 rounded">
                        Mark Completed
                    </button>` : 
                    '<span class="text-green-400">Completed</span>'
                  }
                </td>
              </tr>
            `;
            tableBody.innerHTML += row;
            sln++;
          });
        })
        .catch(function (error) {
          console.error('Error loading garbage requests:', error);
        });
    }

    // Update Recycling Request Status
    function updateRecycleStatus(requestId) {
      axios.post('/admin/update-recycling-status', { requestId })
        .then(function (response) {
          if (response.data.success) {
            loadRecycleRequests();
          }
        })
        .catch(function (error) {
          console.error('Error updating recycle status:', error);
        });
    }

    // Update Garbage Request Status
    function updateGarbageStatus(requestId) {
      axios.post('/admin/update-garbage-status', { requestId })
        .then(function (response) {
          if (response.data.success) {
            loadGarbageRequests();
          }
        })
        .catch(function (error) {
          console.error('Error updating garbage status:', error);
        });
    }

    // Initial load of both request types
    loadRecycleRequests();
    loadGarbageRequests();
  </script>
</body>
</html>
